<div class="row">
  <div class="col-10 col-lg-8 mx-auto p-5">
    <div class="card text-center border-info">
      <div class="card-header text-white bg-info">
        <h1>
          <%= t('scaffold.show') %>
        </h1>
      </div>

      <div class="card-body">
        <div class="d-flex border border-dark">
          <div class="flex-column align-self-baseline p-2">
            <strong>
              <%= t('activerecord.attributes.add_examination.scheduled_at') %>
            </strong>
          </div>
          <div class="ml-auto p-2">
            <%= @add_examination.scheduled_at %>
          </div>
        </div>
        <div class="d-flex border border-dark">
          <div class="flex-column align-self-baseline p-2">
            <strong>
              <%= t('activerecord.attributes.add_examination.category') %>
            </strong>
          </div>
          <div class="ml-auto p-2">
            <%= @add_examination.category %>
          </div>
        </div>
        <div class="d-flex border border-dark">
          <div class="flex-column align-self-baseline p-2">
            <strong>
              <%= t('activerecord.attributes.subject.course') %>
            </strong>
          </div>
          <div class="ml-auto p-2">
            <%= @add_examination.subject.course %>
          </div>
        </div>
        <div class="d-flex border border-dark">
          <div class="flex-column align-self-baseline p-2">
            <strong>
              <%= t('activerecord.attributes.add_examination.place') %>
            </strong>
          </div>
          <div class="ml-auto p-2">
            <%= @add_examination.place %>
          </div>
        </div>
        <div class="d-flex border border-dark">
          <div class="flex-column align-self-baseline p-2">
            <strong>
              <%= t('activerecord.attributes.add_examination.comment') %>
            </strong>
          </div>
          <div class="ml-auto p-2">
            <%= @add_examination.comment %>
          </div>
        </div>
      </div>
    
      <div class="card-footer">
        <div class="container">
          <div class="row">
            <% if user_signed_in? && ( @add_examination.user_id == current_user.id || current_user.admin_user == true ) %>
              <%= link_to t('scaffold.edit'), edit_add_examination_path(@add_examination), class: "btn btn-success col-sm-6" %>
              <%= link_to t('scaffold.back'), add_examinations_path, class: "btn btn-outline-dark col-sm-6" %>  
            <% else %>
              <%= link_to t('scaffold.back'), add_examinations_path, class: "btn btn-outline-dark btn-block" %>  
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>