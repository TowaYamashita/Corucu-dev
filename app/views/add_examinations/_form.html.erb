<div class="container">
  <%= form_with(model: add_examination, local: true) do |form| %>
    <% if add_examination.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(add_examination.errors.count, "error") %> prohibited this add_examination from being saved:</h2>
        <ul>
          <% add_examination.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group row">
      <%= form.label :scheduled_at, t('activerecord.attributes.add_examination.scheduled_at'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.date_select :scheduled_at, {}, {:class => "form-control bootstrap-date"} %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <%= form.label :category, t('activerecord.attributes.add_examination.category'), class: "col-form-label" %>
      </div>
      <div class="col-sm-9 btn-group" data-toggle="buttons">
        <label class="btn btn-outline-secondary" style="width:50%">
          <%= form.radio_button :category, "追試" %> 追試
        </label>
        <label class="btn btn-outline-secondary" style="width:50%">
          <%= form.radio_button :category, "再試" %> 再試
        </label>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :subject_id, t('activerecord.attributes.subject.course'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.collection_select :subject_id, Subject.all, :id, :course, {}, {:class => "form-control"} %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :place, t('activerecord.attributes.add_examination.place'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_field :place, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :comment, t('activerecord.attributes.add_examination.comment'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_area :comment, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
