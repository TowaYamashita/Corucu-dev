<div class="container">
<form>
  <%= form_with(model: add_examination, local: true) do |form| %>
    <% if add_examination.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(add_examination.errors.count, "error") %> prohibited this add_examination from being saved:</h2>
        <ul>
          <% add_examination.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-group row">
    <%= form.label :category, t('activerecord.attributes.add_examination.category'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :category, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :subject_id, t('activerecord.attributes.subject.course'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select :subject_id, Subject.all, :id, :course, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :place, t('activerecord.attributes.add_examination.place'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :place, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :comment, t('activerecord.attributes.add_examination.comment'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :comment, class: "form-control" %>
    </div>
  </div>

  <div class="action">
    <%= form.submit nil , :class => 'btn btn-primary btn-block' %>
  </div>
<% end %>
