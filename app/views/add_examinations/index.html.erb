<p id="notice"><%= notice %></p>

<h1>Add Examinations</h1>

<%= render 'search_form' %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Subject</th>
      <th>Place</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_examinations.each do |add_examination| %>
      <tr>
        <td><%= add_examination.category %></td>
        <td><%= add_examination.subject.course %></td>
        <td><%= add_examination.place %></td>
        <td><%= add_examination.comment %></td>
        <td><%= link_to 'Show', add_examination, class: "btn btn-sm btn-info btn-block" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_add_examination_path(add_examination), class: "btn btn-sm btn-success btn-block" %></td>
          <td><%= link_to 'Destroy', add_examination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger btn-block" %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Add Examination', new_add_examination_path, class: "btn btn-lg btn-success btn-block" %>
<% end%>
