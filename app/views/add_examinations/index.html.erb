<h1>
  <%= t('activerecord.models.add_examination') + "情報の一覧" %>
</h1>

<%= render 'search_form' %>

<div class="card border-success">
  <div class="card-header text-white bg-success">
		検索結果
	</div>
  <div class="card-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= sort_link(@q, :scheduled_at, t('activerecord.attributes.add_examination.scheduled_at'), default_order: :desc) %></th>
          <th><%= t('activerecord.attributes.subject.course') %></th>
          <th><%= t('activerecord.attributes.add_examination.place') %></th>
          <th><%= t('activerecord.attributes.add_examination.comment') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @add_examinations.each do |add_examination| %>
          <tr>
            <td><%= add_examination.scheduled_at %></td>
            <td><%= add_examination.subject.course %></td>
            <td><%= add_examination.place %></td>
            <td>
              <% if add_examination.comment.empty? %>
                <span class="fa-stack">
                  <i class="fa fa-commenting-o fa-stack-2x fa-stack-1x"></i>
                  <i class="fa fa-ban fa-stack-2x text-danger" style="color:red;"></i>
                </span>
              <% else %>
                <i class="fa fa-commenting-o fa-2x" aria-hidden="true"></i>
              <% end %>
            </td>
            <td><%= link_to 'Show', add_examination, class: "btn btn-sm btn-info btn-block" %></td>
            <% if user_signed_in? && ( current_user.id == add_examination.user_id || current_user.admin_user == true ) %>
              <td><%= link_to 'Edit', edit_add_examination_path(add_examination), class: "btn btn-sm btn-success btn-block" %></td>
              <td><%= link_to 'Destroy', add_examination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger btn-block" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Add Examination', new_add_examination_path, class: "btn btn-lg btn-success btn-block" %>
<% end%>
