<p id="notice"><%= notice %></p>

<h1>Substitutes</h1>

<table>
  <thead>
    <tr>
      <th>Changed at</th>
      <th>Period</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @substitutes.each do |substitute| %>
      <tr>
        <td><%= substitute.changed_at %></td>
        <td><%= substitute.period %></td>
        <td><%= substitute.subject.course %></td>
        <td><%= link_to 'Show', substitute %></td>
        <td><%= link_to 'Edit', edit_substitute_path(substitute) %></td>
        <td><%= link_to 'Destroy', substitute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

